}


\newcommand{\LargeTitle}[1]{{\noindent\Large\textbf{\titlecap{#1}}}}
\newcommand{\PaperTitle}[1]{\textbf{\titlecap{#1}}}
\newcommand{\AuthorList}[1]{\textit{\nohyphens{#1}}}
\newcommand{\PaperLink}[2]{{\href{#1}{#2}}}


\newcommand{\MarginDate}[1]{%
  \marginnote{%
    \textit{\small #1}%
  }%
}

