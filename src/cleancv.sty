\newcommand{\Paper}[6][]{% 
  \begin{samepage}
    \MarginDate{#2}
    \PaperTitle{#3}, %
    \AuthorList{#4}, %
    \PaperLink{#5}{#6}#1.\par%
  \end{samepage}
  \vspace{2\WorkExperienceskip}%
}

\newcommand{\PaperX}[2]{%
  \begin{samepage}
    \PaperTitle{#1}, %
    \AuthorList{#2}.\par
  \end{samepage}
  \vspace{\WorkExperienceXskip}%
}

\newcommand{\JobDesc}[2]{%
  \begin{samepage}
    \textsc{#1}%
    {\small#2}\par
  \end{samepage}
  \vspace{\JobDescskip}%
}

\newcommand{\Teaching}[3]{% 
  \begin{samepage}
    \MarginDate{#1}
    \textbf{#2},
    #3\par
    %\textit{#3}\par
  \end{samepage}
  \vspace{1.3\WorkExperienceskip}%
}



\newcommand{\WorkExperience}[3]{%
  \begin{samepage}
    \MarginDate{#1}%
    \PaperTitle{#2}%
    \newline%
    \phantom{xx}{\small#3}
  \end{samepage}
  \vspace{\WorkExperienceskip}
}

\newcommand{\WorkExperienceX}[3]{%
  \begin{samepage}%
    \MarginDate{#1}%
    \PaperTitle{#2}
    \par%
    \textit{#3}\par%
 \end{samepage}%
 \vspace{\WorkExperienceXskip}%
}

\newcommand{\Poster}[2]{%
  \begin{samepage}%
    \MarginDate{#1}%
    {#2}%
 \end{samepage}\par%
 \vspace{1.5\WorkExperienceXskip}%
}

